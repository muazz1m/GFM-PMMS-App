<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="8dp">


    <TextView
        android:id="@+id/text_workorder_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="PMBSI17039539" />

    <TextView
        android:id="@+id/text_task_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:duplicateParentState="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="E0009" />

    <TextView
        android:id="@+id/text_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:duplicateParentState="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Due : Mon, 10/01/2017" />

    <TextView
        android:id="@+id/text_bookingstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:background="@drawable/box_status_item"
        android:duplicateParentState="true"
        android:padding="7dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        tools:text="Completed" />


</android.support.v7.widget.CardView>